@page
@model RegisterModel
@{
    ViewData["Title"] = "DangKy";
    Layout = "~/Areas/Identity/Pages/_IdentityUserLayout.cshtml";
}

<div class="col-md-10 offset-md-1">
    <section>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="form-group">
                <label class="mb-3">Tên</label>
                <input asp-for="Input.firstName" class="form-control" />
                <span asp-validation-for="Input.firstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="mb-3">Họ</label>
                <input asp-for="Input.lastName" class="form-control" />
                <span asp-validation-for="Input.lastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="mb-3">Username</label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="mb-3">Email</label>
                <input asp-for="Input.Email" class="form-control" placeholder="abc@gmail.com"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="mb-3">Mật khẩu</label>
                <input asp-for="Input.Password" class="form-control" placeholder="Mật khẩu có tối thiểu 6 ký tự và tối đa 100 ký tự"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="mb-3"> Xác nhận mật khẩu</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-success form-control">Đăng ký</button>
            </div>
        </form>
    </section>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
