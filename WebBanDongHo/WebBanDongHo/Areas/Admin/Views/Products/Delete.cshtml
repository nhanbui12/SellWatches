@model WebBanDongHo.Models.Products
@{
    ViewData["Title"] = "XoaSanPham";
}
<br />

<h2 class="text-info">Xóa sản phẩm</h2>
<form asp-action="Delete" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-8">
            <div class="form-group row" style="padding:10px">
                <div class="col-4">
                    <label asp-for="name">Tên</label>
                </div>
                <div class="col-8">
                    <input asp-for="name" class="form-control" readonly ="readonly"/>
                </div>
                
            </div>

            <div class="form-group row" style="padding:10px">
                <div class="col-4">
                    <label asp-for="description">Mô tả</label>
                </div>
                <div class="col-8">
                    @* <input asp-for="description" class="form-control" readonly ="readonly"/> *@
                    <textarea asp-for="description" class="form-control" rows="3" readonly="readonly"></textarea>
                </div>
            </div>

            <div class="form-group row" style="padding:10px">
                <div class="col-4">
                    <label asp-for="price">Giá</label>
                </div>
                <div class="col-8">
                    <input class="form-control" value="@string.Format("{0:N0} VNĐ", Model.price)" readonly="readonly" />
                </div>
                
            </div>

            <div class="form-group row" style="padding:10px">
                <div class="col-4">
                    <label asp-for="color">Màu</label>
                </div>
                <div class="col-8">
                    <input asp-for="color" class="form-control" readonly="readonly" />
                </div>
            </div>

            <div class="form-group row" style="padding:10px">
                <div class="col-4">
                    <label asp-for="categories_id">Loại</label>
                </div>
                <div class="col-8">
                    <input asp-for="Categories.name" class="form-control" asp-items="ViewBag.CategoriesName" readonly="readonly" />
                </div>   
            </div>

            <div class="form-group row" style="padding:10px">
                <div class="col-4">
                    <label asp-for="isAvailable">Có sẵn</label>
                </div>
                <div class="col-8">
                    <input asp-for="isAvailable" disabled type="checkbox" />
                </div>
            </div>

            <div class="form-group" style="padding:10px">
                <input type="submit" class="btn btn-outline-danger" value="Xác nhận xóa" style="margin-right:5px;" />
                <a asp-action="Index" class="btn btn-outline-success">Quay lại</a>
            </div>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <div class="form-group row" style="padding:10px">
                <img class="pic" src="~/@Model.image1" width="100%" style="border-radius:5px;border:1px solid #000" />
            </div>
            <div class="form-group row" style="padding:10px">
                <img class="pic" src="~/@Model.image2" width="100%" style="border-radius:5px;border:1px solid #000" />
            </div>
            <div class="form-group row" style="padding:10px">
                <img class="pic" src="~/@Model.image3" width="100%" style="border-radius:5px;border:1px solid #000" />
            </div>
        </div>

    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
