@model WebBanDongHo.Models.Products
@{
    ViewData["Title"] = "SuaSanPham";
}
<br />

<h2 class="text-info">Sửa sản phẩm</h2>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-8">
            <div class="form-group row" style="padding:10px">
                <div class="col-4">
                    <label asp-for="name">Tên</label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="id" />
                    <input asp-for="name" class="form-control" />
                </div> 
                <span asp-validation-for="name" class="text-danger"></span>
            </div>

            <div class="form-group row" style="padding:10px">
                <div class="col-4">
                    <label asp-for="description">Mô tả</label>
                </div>
                <div class="col-8">
                    <textarea asp-for="description" class="form-control" rows="3"></textarea>
                </div>
            </div>

            <div class="form-group row" style="padding:10px">
                <div class="col-4">
                    <label asp-for="price">Giá</label>
                </div>
                <div class="col-8">
                    <input asp-for="price" class="form-control" />
                </div>
                <span asp-validation-for="price" class="text-danger"></span>
            </div>

            <div class="form-group row" style="padding:10px">
                <div class="col-4">
                    <label asp-for="color">Màu</label>
                </div>
                <div class="col-8">
                    <input asp-for="color" class="form-control" />
                </div>
                    <span asp-validation-for="color" class="text-danger"></span>
            </div>

            @* Images *@

            <div class="form-group row" style="padding:10px">
                <div class="col-4">
                    <label asp-for="image1">Hình 1</label>
                </div>
                <div class="col-8">
                    <input asp-for="image1" class="form-control" type="file" name="image1" />
                </div>
            </div>

            <div class="form-group row" style="padding:10px">
                <div class="col-4">
                    <label asp-for="image2">Hình 2</label>
                </div>
                <div class="col-8">
                    <input asp-for="image2" class="form-control" type="file" name="image2" />
                </div>
            </div>

            <div class="form-group row" style="padding:10px">
                <div class="col-4">
                    <label asp-for="image3">Hình 3</label>
                </div>
                <div class="col-8">
                    <input asp-for="image3" class="form-control" type="file" name="image3" />
                </div>
            </div>

            <div class="form-group row" style="padding:10px">
                <div class="col-4">
                    <label asp-for="categories_id">Loại</label>
                </div>
                <div class="col-8">
                    <select asp-for="categories_id" asp-items="ViewBag.categories_id" class="form-control"></select>
                    @* <input asp-for="categories_id" class="form-control" /> *@
                </div>
                <span asp-validation-for="categories_id" class="text-danger"></span>
            </div>

            <div class="form-group row" style="padding:10px">
                <div class="col-4">
                    <label asp-for="isAvailable">Có sẵn</label>
                </div>
                <div class="col-8">
                    <input asp-for="isAvailable" type="checkbox" />
                </div>
            </div>

            <div class="form-group" style="padding:10px">
                <input type="submit" class="btn btn-outline-warning" value="Xác nhận sửa" style="margin-right: 5px;" />
                <a asp-action="Index" class="btn btn-outline-success">Quay lại</a>
            </div>
        </div>
        <div class="col-1"></div>
        <div class="col-3">    
            <div class="form-group row" style="padding:10px">
                <img class="pic" src="~/@Model.image1" width="100%" style="border-radius:5px;border:1px solid #000" />
            </div>
            <div class="form-group row" style="padding:10px">
                <img class="pic" src="~/@Model.image2" width="100%" style="border-radius:5px;border:1px solid #000" />
            </div>
            <div class="form-group row" style="padding:10px">
                <img class="pic" src="~/@Model.image3" width="100%" style="border-radius:5px;border:1px solid #000" />
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
