@model WebBanDongHo.Models.ApplicationUserRoles
@{
    ViewData["Title"] = "PhanQuyen";
}
<br />

<h2 class="text-info">Phân quyền</h2>   

@if (TempData["warning"] != null)
{
    <div class="alert alert-danger">
        <strong>@TempData["warning"]</strong>
    </div>
}

<form asp-action="EditUserRole" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row" style="padding:10px">
            <div class="col-2">
                <label asp-for="UserId">Tài khoản</label>
            </div>
            <div class="col-7">
                <select asp-for="UserId" asp-items="ViewBag.users_id" class="form-control"></select>
                
            </div>
            <div class="col-3 d-flex align-items-center">
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row" style="padding:10px">
            <div class="col-2">
                <label asp-for="RoleId">Quyền</label>
            </div>
            <div class="col-7">
                <select asp-for="RoleId" asp-items="ViewBag.roles_id" class="form-control"></select>
               
            </div>
            <div class="col-3 d-flex align-items-center">
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group" style="padding:10px">
            <input type="submit" class="btn btn-outline-primary" value="Lưu" style="margin-right:5px;" />
            <a asp-action="Index" class="btn btn-outline-success">Quay lại</a>
        </div>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
